# ============================================================
# POLYMARKET ARBITRAGE BOT - ENVIRONMENT VARIABLES
# ============================================================
# Copy this file to .env and fill in your real values
# NEVER commit .env to git (it's in .gitignore)

# ============================================================
# BLOCKCHAIN & RPC
# ============================================================
# Get free Alchemy key: https://www.alchemy.com/
POLYGON_RPC_URL=https://polygon-mainnet.g.alchemy.com/v2/YOUR_ALCHEMY_API_KEY_HERE
POLYGON_CHAIN_ID=137

# ============================================================
# WALLET (CRITICAL: KEEP PRIVATE!)
# ============================================================
# Your Polygon wallet address (starts with 0x)
WALLET_ADDRESS=0xYourWalletAddressHere

# Your wallet private key (NEVER share this!)
# Export from MetaMask: Account Details > Export Private Key
WALLET_PRIVATE_KEY=0xYourPrivateKeyHere

# ============================================================
# POLYMARKET API CREDENTIALS
# ============================================================
# Generated using py-clob-client (we'll do this in next step)
POLYMARKET_API_KEY=your_api_key_here
POLYMARKET_API_SECRET=your_api_secret_here
POLYMARKET_API_PASSPHRASE=your_passphrase_here
POLYMARKET_HOST=https://clob.polymarket.com

# ============================================================
# STRATEGY PARAMETERS
# ============================================================
# Set to 'true' for testing without real money, 'false' for live trading
DRY_RUN_MODE=true

# Minimum profit needed to execute trade (0.01 = 1%)
PROFIT_THRESHOLD=0.01

# Trade size limits (in USD)
MIN_TRADE_USD=10.0
MAX_TRADE_USD=100.0
MAX_TOTAL_EXPOSURE=500.0

# Seconds to wait between trade attempts
EXECUTION_COOLDOWN=5.0

# ============================================================
# TARGET MARKETS
# ============================================================
# Comma-separated list of condition IDs to monitor
# We'll find these in the next notebook
TARGET_MARKETS=0x123...,0x456...,0x789...

# ============================================================
# MONITORING & LOGGING
# ============================================================
# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Enable alerts (future feature)
ENABLE_ALERTS=false
